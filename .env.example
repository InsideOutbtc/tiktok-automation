# Environment Configuration
ENV=development
LOG_LEVEL=INFO

# Constitutional AI Settings
MAX_VELOCITY_MODE=true
AUTO_DECISION_MAKING=true
CONFIRMATION_REQUIRED=false
ERROR_TIER_HANDLING=automatic

# MCP Servers
MCP_REF_ENABLED=true
MCP_SEMGREP_ENABLED=true
MCP_PIECES_ENABLED=true
MCP_EXA_ENABLED=true
MCP_PLAYWRIGHT_ENABLED=true

# Token Optimization
REF_CACHE_DIR=./mcp-cache/ref
PIECES_STORAGE=./mcp-cache/pieces
TOKEN_REDUCTION_TARGET=85

# Database
DATABASE_URL=sqlite:///database/content.db

# API Keys (obtain from platforms)
OPENAI_API_KEY=sk-...
YOUTUBE_API_KEY=...
TIKTOK_API_KEY=...

# Redis
REDIS_URL=redis://localhost:6379

# Paths
VIDEO_INPUT_DIR=./input
VIDEO_OUTPUT_DIR=./output
TEMP_DIR=./processing/temp

# Processing
MAX_WORKERS=4
VIDEO_QUALITY=high
MAX_CLIP_DURATION=30

# Performance Standards (Constitutional AI)
API_RESPONSE_TARGET=22  # ms
AGENT_COORDINATION_TARGET=200  # ms
DATABASE_QUERY_TARGET=5  # ms

# Posting
POST_TIMES=09:00,13:00,18:00,21:00
MAX_POSTS_PER_DAY=4

# Monitoring
METRICS_PORT=8000
HEALTH_CHECK_INTERVAL=60
CONSTITUTIONAL_COMPLIANCE_CHECK=true